@model IEnumerable<aula13crudPeople.Models.Entities.Person>

    

<a href="Conta/Create" class="btn btn-primary">Nova Pessoa</a>


<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Nome</th>
                <th></th>
            </tr>
        </thead>

        @foreach(var item in Model)
        {
            <tr>
            
                <td>@item.id</td>
                <td>@item.name</td>
                <td><a class="btn btn-danger"
                    href="Conta/Delete/@item.id">Delete</a> </td>
                <td><a class="btn btn-primary" 
                    href="Conta/Edit/@item.id">Editar</a> </td>
            </tr>
        }
    </table>
</div>